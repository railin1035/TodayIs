<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <!--배경화면 레이아웃-->
    <LinearLayout
        android:id="@+id/backLayout"
        android:layout_width="0dp"
        android:layout_height="299dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/app_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/customborder"
            app:layout_constraintBottom_toTopOf="@+id/recyclerview_main_listwid"
            tools:layout_editor_absoluteX="1dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="58dp"
                android:layout_height="0dp"
                android:layout_marginLeft="357dp"
                android:background="#00ff0000"
                android:src="@drawable/ic_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/backconst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/customborder">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="22.5dp"
                android:layout_height="14dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="4dp"
                android:text="배경"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="28dp"
                android:layout_height="11.5dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="52dp"
                android:text="배경색"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="45.4dp"
                android:layout_height="21dp"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="47dp"
                android:background="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/colorbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="192dp"
                android:layout_marginTop="44dp"
                android:background="#00ff0000"
                android:src="@drawable/ic_colorpicker_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="28dp"
                android:layout_height="11.5dp"
                android:layout_marginLeft="236dp"
                android:layout_marginTop="52dp"
                android:text="투명도"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="109dp"
                android:layout_height="19dp"
                android:layout_marginLeft="273dp"
                android:layout_marginTop="49dp"
                android:max="100"
                android:progress="0"
                android:progressBackgroundTint="@color/colorBlack"
                android:progressTint="@color/tintPrimary"
                android:thumbTint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--   ndroid:scrollbarStyle="insideInset"a-->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="34dp"
                android:layout_height="14dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="108dp"
                android:text="텍스트"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="28dp"
                android:layout_height="11.5dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="156dp"
                android:text="글씨색"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="45.4dp"
                android:layout_height="21dp"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="151dp"
                android:background="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/colorbutton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="192dp"
                android:layout_marginTop="149dp"
                android:background="#00ff0000"
                android:src="@drawable/ic_colorpicker_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="37.5dp"
                android:layout_height="11.5dp"
                android:layout_marginLeft="236dp"
                android:layout_marginTop="156dp"
                android:text="글씨크기"
                android:textColor="@color/colorBlack"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button4"
                android:layout_width="45.4dp"
                android:layout_height="21dp"
                android:layout_marginLeft="284dp"
                android:layout_marginTop="152dp"
                android:background="#00ff0000"
                android:text="0"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
        <!--배경화면 레이아웃-->


        <!-- 테마 레이아웃 -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/themeLayout"
        android:layout_width="0dp"
        android:layout_height="299dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/app_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/theme"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/customborder"
            app:layout_constraintBottom_toTopOf="@+id/recyclerview_main_listwid"
            tools:layout_editor_absoluteX="1dp">

            <ImageButton
                android:id="@+id/themeButton"
                android:layout_width="58dp"
                android:layout_height="0dp"
                android:layout_marginLeft="357dp"
                android:background="#00ff0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_arrow" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_main_listtheme"
            android:layout_width="429dp"
            android:layout_height="211dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/customborder"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_weight="9"
            tools:listitem="@layout/item_list"
            tools:spanCount="5">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <!-- 테마 레이아웃 -->

    <!-- 위젯 레이아웃 -->
    <LinearLayout
        android:id="@+id/widgetLayout"
        android:layout_width="0dp"
        android:layout_height="299dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/app_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/widtest"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/customborder"
            app:layout_constraintBottom_toTopOf="@+id/recyclerview_main_listwid"
            tools:layout_editor_absoluteX="1dp">

            <ImageButton
                android:id="@+id/widgetButton"
                android:layout_width="58dp"
                android:layout_height="0dp"
                android:layout_marginLeft="357dp"
                android:background="#00ff0000"
                android:src="@drawable/ic_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_main_listwid"
            android:layout_width="429dp"
            android:layout_height="211dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/customborder"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_weight="9"
            tools:listitem="@layout/item_list"
            tools:spanCount="5">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <!-- 위젯 레이아웃 -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="176dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--<EditText
        android:layout_width="290dp"
        android:layout_height="47dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="98dp" />-->

</android.support.constraint.ConstraintLayout>