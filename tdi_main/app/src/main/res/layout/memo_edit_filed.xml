<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/memo_edit_abbbar"
    android:id="@+id/memo_edit_toolbar"
    ></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMemo"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_box"
            android:orientation="vertical">
            <TextView
                android:id="@+id/memo_edit_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayoff"
                android:layout_gravity="top|left"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1.5sp"
                android:textSize="9sp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                />
            <!--오늘 날짜입력-->

            <EditText
                android:id="@+id/memo_edit_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="top"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="5sp"
                android:padding="15dp"
                android:hint="제목입력"
                />

    <EditText
        android:id="@+id/memo_edit_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5sp"
        android:padding="15dp"
        android:hint="내용입력"
        />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>