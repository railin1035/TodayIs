<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_filed"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/memolist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2sp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/create_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="1px" />

        </LinearLayout>

        <TextView
            android:id="@+id/memolist_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginRight="15dp"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="5sp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15.5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12.5dp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1.5sp"
                android:text="등록일"
                android:textColor="@color/colorGrayoff"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/memeolist_create_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1.5sp"
                android:text=""
                android:textColor="@color/colorGrayoff"
                android:textSize="9sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="152.5dp"
                android:layout_marginRight="12.5dp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1.5sp"
                android:text="최종수정일"
                android:textColor="@color/colorGrayoff"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/memeolist_update_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1.5sp"
                android:text=""
                android:textColor="@color/colorGrayoff"
                android:textSize="9sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>