<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/vertical_match_LinearLayout">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/primary_toolbar"
        android:id="@+id/schedule_input_app_toolbar">
        <ImageView
            style="@style/toolbar_back_btn"
            android:id="@+id/schedule_input_back_setting" />
        <TextView
            style="@style/toolbar_text"
            android:id="@+id/schedule_input_toolbar_title"
            android:text="일정" />
    </android.support.v7.widget.Toolbar>
    <EditText
        style="@style/default_match_wrap_Layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="13sp"
        android:hint="  일정을 입력 하세요"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    style="@style/schedule_input_left_text"
                    android:text="시작일"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_underline"
                    android:textSize="13sp"
                    android:text="2019년      09월      23일   (월)     09:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    style="@style/schedule_input_left_text"
                    android:layout_weight="1"
                    android:text="종료일"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_underline"
                    android:textSize="13sp"
                    android:text="2019년      09월      23일   (월)     18:00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end">
                <Button
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:text="시간"
                    android:textSize="13sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_box_input_btn_primary"/>
                <Button
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:text="종일"
                    android:textSize="13sp"
                    android:background="@drawable/round_box_input_btn_default"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    style="@style/schedule_input_left_text"
                    android:text="반복"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="13sp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:text="없음"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="13sp"
                    android:background="@color/colorWhite"
                    android:text="매주"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="13sp"
                    android:background="@color/colorWhite"
                    android:text="매월"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:textSize="13sp"
                    android:background="@color/colorWhite"
                    android:text="매년"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    style="@style/schedule_input_left_text"
                    android:text="알림"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="13sp"
                    android:background="@drawable/text_underline"
                    android:text="7일전"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    style="@style/schedule_input_left_text"
                    android:text="D-Day"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.2"
                    android:background="@drawable/text_underline"
                    android:textSize="13sp"
                    android:text="설정안함"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center_vertical"
            android:layout_weight="0.6">
            <TextView
                style="@style/schedule_input_left_text"
                android:text="색상"
                android:layout_weight="1"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:background="@drawable/stroke_btn"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_weight="2.8"/> <!--빈공간-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <TextView
                style="@style/schedule_input_left_text"
                android:text="장소"
                android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="13sp"
                    android:background="@drawable/text_underline"
                    android:text="설정 안함"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <TextView
                style="@style/schedule_input_left_text"
                android:layout_width="80dp"
                android:text="메모"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_underline"
                android:maxLines="1"
                android:hint="메모를 입력하세요"
                android:layout_weight="1"
                android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            /><!--빈공간-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>