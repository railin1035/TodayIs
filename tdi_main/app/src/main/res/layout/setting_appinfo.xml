<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:id="@+id/app_toolbar">
        <ImageView
            android:id="@+id/back_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="어플리케이션 정보"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">
        <!--버전정보-->
        <ImageView
            android:layout_width="127dp"
            android:layout_height="110dp"
            android:background="@drawable/infologo"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorBlack55"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="4.5sp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:text="오늘은?"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.03"
                android:layout_gravity="left"
                android:layout_marginRight="46dp"
                android:lineSpacingExtra="2.5sp"
                android:text="버전정보"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorGrayoff"
                android:letterSpacing="0.03"
                android:layout_gravity="center"
                android:layout_marginRight="46dp"
                android:lineSpacingExtra="2.5sp"
                android:text="1.0.1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="right"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.5sp"
                android:text="최신버전"/>
        </LinearLayout>
        <!--//버전정보-->
    </LinearLayout>
    <!--ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorGrayoff"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="240dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:textSize="16.5sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.5sp"
                android:text="이용약관"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:textSize="16.5sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.5sp"
                android:text="개인정보처리방침"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:textSize="16.5sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.5sp"
                android:text="오픈 소스 라이선스"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:textSize="16.5sp"
                android:textColor="@color/colorBlack"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.5sp"
                android:text="위치기반서비스 이용약관"/>
        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_marginTop="29dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/colorGrayoff"
            />
</LinearLayout>
</LinearLayout>